<% layout('layouts/boilerplate') %>

<!-- Hero Section -->
<section class="hero-section">
    <div class="container">
        <div class="row justify-content-center text-center">
            <div class="col-lg-8">
                <h1 class="display-4 fw-bold mb-4">
                    Discover Amazing Destinations
                </h1>
                <p class="lead mb-5">
                    Explore the world's most beautiful places with real-time weather, 
                    stunning photography, and curated travel information.
                </p>
            </div>
        </div>
    </div>
</section>

<!-- Search Form -->
<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <form class="search-form" action="/search" method="POST">
                <div class="text-center mb-4">
                    <h3 class="fw-semibold">Where do you want to go?</h3>
                    <p class="text-muted">Search for any city or destination worldwide</p>
                </div>
                
                <div class="input-group input-group-lg">
                    <span class="input-group-text">
                        <i class="bi bi-search"></i>
                    </span>
                    <input type="text" 
                           class="form-control" 
                           name="destination" 
                           placeholder="Enter city name (e.g., Paris, Tokyo, London...)" 
                           required
                           autocomplete="off">
                    <button class="btn btn-primary" type="submit">
                        <i class="bi bi-airplane me-2"></i>
                        Explore
                    </button>
                </div>
                
                <div class="text-center mt-3">
                    <small class="text-muted">
                        Get weather, photos, and famous attractions for any destination
                    </small>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Featured Destinations -->
<section class="py-5">
    <div class="container">
        <div class="text-center mb-5">
            <h2 class="fw-bold">Featured Destinations</h2>
            <p class="text-muted">Popular cities with rich culture and amazing attractions</p>
        </div>
        
        <div class="row g-4">
            <% destinations.forEach(function(destination) { %>
                <div class="col-lg-3 col-md-6">
                    <div class="card h-100">
                        <div class="position-relative overflow-hidden" style="height: 250px;">
                            <img src="<%= destination.image %>" 
                                 class="card-img-top h-100 w-100" 
                                 style="object-fit: cover;"
                                 alt="<%= destination.name %>">
                            <div class="position-absolute top-0 end-0 m-3">
                                <span class="badge bg-primary">
                                    <i class="bi bi-geo-alt me-1"></i>
                                    <%= destination.country %>
                                </span>
                            </div>
                        </div>
                        
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title fw-bold">
                                <%= destination.name %>
                            </h5>
                            <p class="card-text text-muted flex-grow-1">
                                <%= destination.description %>
                            </p>
                            <a href="/destination/<%= destination.id %>" 
                               class="btn btn-primary mt-auto">
                                <i class="bi bi-arrow-right me-2"></i>
                                Explore <%= destination.name %>
                            </a>
                        </div>
                    </div>
                </div>
            <% }); %>
        </div>
    </div>
</section>

<!-- Features Section -->
<section class="py-5" style="background-color: var(--secondary-color);">
    <div class="container">
        <div class="text-center mb-5">
            <h2 class="fw-bold">Why Choose Travel Explorer?</h2>
            <p class="text-muted">Everything you need to plan your perfect trip</p>
        </div>
        
        <div class="row g-4">
            <div class="col-md-4">
                <div class="card text-center h-100">
                    <div class="card-body">
                        <div class="mb-3">
                            <i class="bi bi-cloud-sun display-4 text-primary"></i>
                        </div>
                        <h5 class="card-title fw-bold">Real-time Weather</h5>
                        <p class="card-text text-muted">
                            Get current weather conditions, temperature, and forecasts 
                            for any destination worldwide.
                        </p>
                    </div>
                </div>
            </div>
            
            <div class="col-md-4">
                <div class="card text-center h-100">
                    <div class="card-body">
                        <div class="mb-3">
                            <i class="bi bi-camera display-4 text-primary"></i>
                        </div>
                        <h5 class="card-title fw-bold">Stunning Photography</h5>
                        <p class="card-text text-muted">
                            Browse high-quality photos from professional photographers 
                            to inspire your next adventure.
                        </p>
                    </div>
                </div>
            </div>
            
            <div class="col-md-4">
                <div class="card text-center h-100">
                    <div class="card-body">
                        <div class="mb-3">
                            <i class="bi bi-geo-alt display-4 text-primary"></i>
                        </div>
                        <h5 class="card-title fw-bold">Famous Attractions</h5>
                        <p class="card-text text-muted">
                            Discover must-visit landmarks, museums, and attractions 
                            with detailed information and ratings.
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>