<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title><%= title || 'Travel Explorer - Discover Amazing Destinations' %></title>

<!-- Bootstrap CSS -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">

<!-- Bootstrap Icons -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">

<!-- Leaflet CSS -->
<link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css" integrity="sha256-p4NxAoJBhIIN+hmNHrzRCf9tD/miZyoHS5obTRR9BMY=" crossorigin="anonymous">

<!-- Custom CSS -->
<link rel="stylesheet" href="/css/style.css">

<!-- Meta tags -->
<meta name="description" content="<%= locals.description || 'Discover amazing destinations worldwide with real-time weather, stunning photography, and detailed travel information.' %>">
<meta name="keywords" content="travel, destinations, weather, photography, attractions, tourism, vacation, explore">
<meta name="author" content="Travel Explorer">

<!-- Open Graph / Facebook -->
<meta property="og:type" content="website">
<meta property="og:url" content="<%= locals.url || 'https://travel-explorer.com' %>">
<meta property="og:title" content="<%= title || 'Travel Explorer - Discover Amazing Destinations' %>">
<meta property="og:description" content="<%= locals.description || 'Discover amazing destinations worldwide with real-time weather, stunning photography, and detailed travel information.' %>">
<meta property="og:image" content="<%= locals.ogImage || 'https://images.unsplash.com/photo-1488646953014-85cb44e25828?w=1200&h=630&fit=crop' %>">

<!-- Twitter -->
<meta property="twitter:card" content="summary_large_image">
<meta property="twitter:url" content="<%= locals.url || 'https://travel-explorer.com' %>">
<meta property="twitter:title" content="<%= title || 'Travel Explorer - Discover Amazing Destinations' %>">
<meta property="twitter:description" content="<%= locals.description || 'Discover amazing destinations worldwide with real-time weather, stunning photography, and detailed travel information.' %>">
<meta property="twitter:image" content="<%= locals.ogImage || 'https://images.unsplash.com/photo-1488646953014-85cb44e25828?w=1200&h=630&fit=crop' %>">

<!-- Favicon -->
<link rel="icon" type="image/x-icon" href="data:image/svg+xml,<svg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 100 100'><text y='.9em' font-size='90'>✈️</text></svg>">

<!-- Theme color -->
<meta name="theme-color" content="#007bff">

<!-- Preconnect to external domains -->
<link rel="preconnect" href="https://images.unsplash.com">
<link rel="preconnect" href="https://api.openweathermap.org">
<link rel="preconnect" href="https://cdn.jsdelivr.net">